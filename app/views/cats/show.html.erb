<h1><%= @cat.name %></h1>
<div>
	<table class='table'>
		<thead>
			<th>Name</th>
			<th>Age</th>
			<th>Birth Day</th>
			<th>Color</th>
			<th>Sex</th>
		</thead>
		<tbody>
			<td><%= @cat.name %></td>
			<td><%= @cat.age %></td>
			<td><%= @cat.birth_date %></td>
			<td><%= @cat.color %></td>
			<td><%= @cat.sex %></td>
		</tbody>
	</table>
</div>

<div>
	<h2>Cat Rental Schedule</h2>
	<table class='table'>
		<thead>
			<th>Start Date</th>
			<th>End Date</th>
			<th>Status</th>
		</thead>
		<tbody>
			<% @cat.requests.sort{|x| x.start_date }.each do |request| %>
			<tr>
				<td><%= request.start_date %></td>
				<td><%= request.end_date %></td>
				<td><%= request.status %></td>
				</tr>
			<% end %>
			<tr>
				<form action="<%= cat_cat_rental_requests_url(@cat.id) %>" method="post" role="form">
				<td><input type="date" name="cat_rental_request[start_date]" id="cat_rental_start"></td>
				<td><input type="date" name="cat_rental_request[end_date]" id="cat_rental_end"></td>
				<td><button type="submit" class="btn btn-success">Reserve</button></td>
			</form>
			</tr>
		</tbody>
	</table>
</div>
